{
  "serviceName": "llmequeue",
  "containers": {
    "server": {
      "image": "llmequeue-server",
      "ports": {
        "8000": "HTTP"
      },
      "environment": {
        "AUTH_TOKEN": "your-secret-token",
        "DB_PATH": "data/llmequeue.db",
        "EMBEDDING_MODEL": "nomic-embed-text",
        "CHAT_MODEL": "llama3.1:8b"
      }
    }
  },
  "publicEndpoint": {
    "containerName": "server",
    "containerPort": 8000,
    "healthCheck": {
      "path": "/health",
      "intervalSeconds": 30,
      "timeoutSeconds": 5,
      "healthyThreshold": 2,
      "unhealthyThreshold": 2
    }
  }
}
